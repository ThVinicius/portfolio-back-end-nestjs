generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Badges {
  name       String     @id
  image      String
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  project    Projects[]

  @@map("badges")
}

model Projects {
  id          Int         @id @default(autoincrement())
  name        String
  type        ProjectType
  description String
  image       String
  position    Int?        @unique
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  badges      Badges[]
  links       Links[]

  @@map("projects")
}

